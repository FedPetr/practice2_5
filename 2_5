Задание 1:

#include <iostream>

#include <windows.h>

using namespace std;

int binary_search(int arr[], int l, int r, int k)
{
    int m = 0;
    while (1)
    {
        m = (l + r) / 2;

        if (k < arr[m])
            r = m - 1;
        else if (k > arr[m])
            l = m + 1;
        else
            return m;

        if (l > r)
            return -1;
    }
}

int main()
{
    SetConsoleOutputCP(CP_UTF8);

    const int SIZE = 12;
    int array[SIZE] = {};
    int k = 0;
    int index = 0;

    for(int i = 0; i < SIZE; i++)
    {
        array[i] = i + 1;
    }
    cout <<"Massive contains consecutive numbers from 1 to 12";
    cout << "\n\nEnter any number: ";
    cin >> k;

    index = binary_search(array, 0, SIZE, k);

    if (index >= 0)
        cout << "Index of that number: " << index;
    else
        cout << "-1";

    return 0;
}


